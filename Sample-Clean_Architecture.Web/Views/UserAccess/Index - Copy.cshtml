@model IEnumerable<DumiSoft.Web.Models.UserAccess.UserAccessModel>
@{ 
    Layout = null;
}

<style>
    #user-access li .form-group{
        position: relative;
    }
    #user-access li .form-group .collaspse-icon {
        position: absolute;
        top: 0;
        right: 15px;
    }
</style>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Index" onsubmit="return jQueryAjaxPostL2(this);">
            <ul id="user-access" style="list-style: none">
                @foreach (var userAccess in Model)
                {
                    @if (userAccess.ParentId == 1)
                    {
                        @Html.Partial("_SubUserAccessPartial", new { UserAccess = userAccess, List = Model });
                    }
                }
            </ul>
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    "use strict";

    $(window).on('load', function () {
        alert('OK');
    });
</script>