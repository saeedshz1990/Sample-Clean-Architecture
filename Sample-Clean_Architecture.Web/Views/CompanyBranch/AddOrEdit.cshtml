@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model Sample_Clean_Architecture.Web.Models.Companies.CompanyBranchModel

@{ Layout = null; }

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.CompanyBranch_Id" onsubmit="return jQueryAjaxPostL2(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompanyBranch_Id" />
            <input type="hidden" asp-for="Company_Id" />

            <div class="form-group">
                <label asp-for="CompanyBranch_Title" class="control-label"></label>
                <input asp-for="CompanyBranch_Title" class="form-control" />
                <span asp-validation-for="CompanyBranch_Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>
