@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model Demo.Web.Models.Auth.RegisterModel;

@{
    ViewData["Title"] = "Home Page";
    ViewData["IsAuthPage"] = true;
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/media/image/favicon.png" />

    <!-- Plugin styles -->
    <link rel="stylesheet" href="~/vendors/bundle.css" type="text/css">

    <!-- App styles -->
    <link rel="stylesheet" href="~/css/app.css" type="text/css">
</head>

<body class="form-membership">
    <div class="page-loader">
        <div class="spinner-border"></div>
    </div>

    <div class="form-wrapper pb-1 text-left">
        <!-- logo -->
        <div class="logo mb-1">
            <img src="~/media/image/logo-sm.png" alt="image">
        </div>
        <h3 class="mb-4 text-center">Dumi Soft</h3>
        <style scoped>
            body.form-membership .form-wrapper {
                width: 450px;
            }

            #basic-sub-domain {
                font-size: 0.8rem;
            }
        </style>

        <h5>Register</h5>
        @if (ViewData["Message"] != null)
        {
            <div class="alert alert-success alert-with-border m-b-0" role="alert">
                <h4 class="alert-heading">Well done!</h4>
                <p>@ViewData["Message"]</p>
            </div>
        }
        else
        {
            <!-- form -->
            <form asp-action="Register">
                <div class="form-group">
                    <label asp-for="Name" class="float-left"></label>
                    <div class="input-group">
                        @*<div class="input-group-prepend">
                    <span class="input-group-text" id="basic-sub-domain"><i class="fa fa-lock mr-2"></i>https://www.Dumisoft.com/</span>
                    </div>*@
                        <input type="text" asp-for="@Model.Name" class="form-control mb-0" placeholder="Enter your name" aria-label="SubDomain" aria-describedby="basic-sub-domain">
                        <span asp-validation-for="Name" class="text-danger float-left mb-2 w-100 d-block"></span>
                        @*<span class="text-muted small">The title you pick is part of the URL where you will access your Manager Cloud site. Make sure you pick a subdomain that is between 3 and 30 characters long and contains only letters or disigts</span>*@
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="float-left"></label>
                    <div class="input-group">
                        <input type="text" asp-for="@Model.Email" class="form-control mb-0" placeholder="Enter your email aadddress" autofocus>
                        <span asp-validation-for="Email" class="text-danger float-left mb-2 w-100 d-block"></span>
                    </div>
                </div>
                <input type="submit" value="Register" class="btn btn-primary btn-block" />
                <hr>

            </form>
            <!-- ./ form -->
        }

        <div class="text-center">
            <p class="text-muted">already have an account?</p>
            <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-light btn-sm">Login now!</a>
        </div>
        <p class="text-center mt-5">Please contact us at <strong>support&#64;</strong><a href="javascript:void(0);">Dumisoft.com</a> if you require assistance.</p>

    </div>


    <!-- Plugin scripts -->
    <script src="~/vendors/bundle.js"></script>

    <!-- App scripts -->

    <script src="~/js/app.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>